<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BAAS.TestXaml"
             Title="Dice">
    <VerticalStackLayout>
        <Label 
            Text="Roll the Dice"
            FontSize="32"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            x:Name="DiceComment"
            Text=""
            FontSize="22"
            FontAttributes="Bold"
            HorizontalOptions="Center" />
        <Button 
            x:Name="DiceButton"
            Text="Dice"
            Clicked="ClickEvent"
            />
    </VerticalStackLayout>
</ContentPage>